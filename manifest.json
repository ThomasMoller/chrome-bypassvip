{
  "name": "Bypass.vip",
  "description": "Shows the actual link for many ad linkers, url shorteners etc.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "bypassvip.html",
    "default_icon": "images/icon-48.png"
  },

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "content_scripts": [
      {
          "matches": [
            "*://linkvertise.com/*",
            "*://exe.io/*",
            "*://exey.io/*",
            "*://adf.ly/*",
            "*://sub2unlock.net/*",
            "*://sub2unlock.com/*",
            "*://rekonise.com/*",
            "*://letsboost.net/*",
            "*://mboost.me/*",
            "*://shortconnect.com/*",
            "*://sub4unlock.com/*",
            "*://ytsubme.com/*",
            "*://social-unlock.com/*",
            "*://boost.ink/*",
            "*://bit.ly/*",
            "*://goo.gl/*",
            "*://t.co/*",
            "*://tinyurl.com/*"
          ],
          "js": ["scripts/bypassvip.js"]
      }
  ],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "web_accessible_resources": [{
      "resources": ["popdown.html"],
      "matches": ["<all_urls>"]
  }]
}